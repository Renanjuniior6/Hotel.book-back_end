{
    "env": {
        "es2021": true,
        "node": true
    },
    "extends": [
      "standard",
      "prettier"
    ],
    "plugins": ["prettier"],
    
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
     "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,
        "trailingComma": "all",
        "arrowParens": "always",
        "endOfLine": "auto",
        "bracketSpacing": true,
        "bracketSameLine": false,
        "printWidth": 80,
        "proseWrap": "preserve",
        "quoteProps": "as-needed",
        "semi": false,
        "tabWidth": 2,
        "useTabs": false
      }
    ],
    "camelcase": "off",
    "comma-dangle": "off"
  }
}
